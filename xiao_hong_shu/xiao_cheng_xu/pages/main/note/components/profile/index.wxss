.header {
    background: #fff;
    height: 80rpx;
    justify-content: space-between;
    padding: 20rpx 0 30rpx;
}

.header,.header .user-box {
    align-items: center;
    display: flex;
}

.header .user-box {
    margin-left: 30rpx;
}

.header .avatar {
    display: flex;
}

.header .user-info {
    display: flex;
    flex-direction: column;
    height: 80rpx;
    justify-content: center;
    margin-left: 20rpx;
}

.header .nick-name {
    color: #333;
    font-size: 30rpx;
    font-weight: 700;
    line-height: 36rpx;
}

.header .verify-icon {
    height: 24rpx;
    margin-left: 6rpx;
    width: 24rpx;
}

.header .poi {
    color: #999;
    font-size: 22rpx;
    line-height: 26rpx;
    margin-top: 6rpx;
    position: relative;
}

.poi .location-icon {
    height: 18rpx;
    width: 16rpx;
}

.header .follow-button {
    height: 50rpx;
}

.header .follow-button .action-button {
    border: 2rpx solid #ff2741;
    border-radius: 26rpx;
    color: #ff2741;
    display: inline-block;
    font-size: 26rpx;
    font-weight: 600;
    height: 50rpx;
    line-height: 50rpx;
    margin-right: 30rpx;
    text-align: center;
    width: 116rpx;
}

.header .follow-button .action-button.block {
    display: block!important;
}

.header .follow-button.followed .action-button {
    border: 2rpx solid #999;
    color: #999;
}