.note-list {
    height: 300rpx;
    width: 100%;
}

.submit-container {
    -webkit-tap-highlight-color: none;
    background-color: none;
    background: none;
    border-radius: 0;
    color: inherit;
    font-size: inherit;
    line-height: inherit;
    padding: 0;
    text-align: inherit;
    width: 100%;
}

.submit-container:after {
    border: none;
}

.submit-container.inline {
    display: inline-block;
}

.submit-container.button-hover {
    background-color: none;
}

.submit-container .image-container {
    max-height: 460rpx;
    overflow: hidden;
}

.item {
    background: #fff;
    border-radius: 4px;
    margin-bottom: 10rpx;
    position: relative;
    transition: opacity .8s;
}

.item-inner-container,.item image {
    width: 100%;
}

.item image.item-image {
    border-radius: 4px 4px 0 0;
    width: 100%;
}

.item image.item-image.hide {
    height: 0;
    width: 0;
}

.item .item-interest-content {
    padding: 20rpx;
}

.item .item-content {
    padding: 20rpx 20rpx 0;
    text-align: left;
}

.item .item-recommend {
    align-items: center;
    display: flex;
    margin-bottom: 16rpx;
}

.item .recommend-icon {
    height: 24rpx;
    width: 24rpx;
}

.item .recommend-desc {
    color: #999;
    display: inline-block;
    font-size: 22rpx;
    font-weight: 300;
    line-height: 24rpx;
    margin-left: 6rpx;
}

.item .item-title {
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    color: #333;
    display: -webkit-box;
    font-size: 26rpx;
    font-weight: 700;
    line-height: 40rpx;
    margin-bottom: 16rpx;
    max-width: 305rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
}

.item .interest-cover {
    padding: 74rpx 0 40rpx;
}

.item .interest-title {
    margin: 0;
    text-align: center;
}

.item .item-desc {
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    color: #666;
    display: -webkit-box;
    font-size: 24rpx;
    margin: 10rpx auto;
    overflow: hidden;
    text-overflow: ellipsis;
}

.item .video-sign {
    height: 60rpx;
    position: absolute;
    right: 20rpx;
    top: 20rpx;
    width: 60rpx;
}

.detail-info-container {
    padding: 0 20rpx 20rpx;
}

.item-author {
    position: relative;
    width: 100%;
}

.item-author,.item-author .item-author-inner {
    align-items: center;
    display: flex;
    justify-content: flex-start;
}

.item-author .item-author-box {
    height: 50rpx;
    margin-right: 8rpx;
    position: relative;
    width: 50rpx;
}

.item-author .item-author-box .item-author-img {
    border-radius: 50%;
    height: 50rpx;
    width: 50rpx;
}

.item-author .item-author-box .verfied-icon {
    bottom: 0;
    height: 16rpx;
    position: absolute;
    right: 0;
    width: 16rpx;
}

.item-author .item-author-name {
    color: #333;
    display: inline-block;
    font-size: 20rpx;
    overflow: hidden;
    text-align: left;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 152rpx;
}

.item-like {
    color: #666;
    font-size: 26rpx;
    position: absolute;
    right: 4rpx;
}

.item-like image {
    height: 30rpx;
    vertical-align: middle;
    width: 30rpx;
}