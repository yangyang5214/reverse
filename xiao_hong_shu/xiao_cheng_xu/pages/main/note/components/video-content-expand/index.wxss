.video-content {
    bottom: 0;
    height: 100%;
    position: absolute;
    transition: background .2s ease;
    width: 100%;
    z-index: 100000;
}

.video-content.expand {
    background: rgba(0,0,0,.6);
}

.video-content .video-content-margin {
    bottom: 0;
    height: 100%;
    margin-bottom: 30rpx;
    overflow: hidden;
    position: absolute;
    width: 100%;
}

.video-content .video-content-margin .video-content-box {
    box-sizing: border-box;
    padding: 30rpx 30rpx 0;
    position: absolute;
    width: 100%;
}

.video-content .video-content-margin .video-content-box .user-information {
    align-items: center;
    display: flex;
    height: 72rpx;
}

.video-content .video-content-margin .video-content-box .user-information .skip-user {
    align-items: center;
    display: flex;
    height: 72rpx;
    margin-right: 26rpx;
}

.video-content .video-content-margin .video-content-box .user-information .skip-user image {
    border-radius: 50%;
    height: 72rpx;
    width: 72rpx;
}

.video-content .video-content-margin .video-content-box .user-information .skip-user text {
    color: #fff;
    font-size: 30rpx;
    font-weight: 500;
    line-height: 36rpx;
    margin-left: 20rpx;
    max-width: 400rpx;
}

.video-content .video-content-margin .video-content-box .user-information .focus-on {
    border: 1px solid rgba(255,255,255,.2);
    border-radius: 40rpx;
    color: #fff;
    font-size: 24rpx;
    font-weight: 500;
    height: 44rpx;
    line-height: 44rpx;
    text-align: center;
    width: 100rpx;
}

.video-content .video-content-margin .video-content-box .video-content-details {
    box-sizing: border-box;
    display: flex;
    margin-top: 20rpx;
    position: relative;
    width: 690rpx;
}

.video-content .video-content-margin .video-content-box .video-content-details .video-content-text {
    color: #fff;
    font-size: 30rpx;
    font-weight: 400;
    line-height: 46rpx;
    margin-bottom: 46rpx;
    max-height: 450rpx;
}

.video-content .video-content-margin .video-content-box .video-content-details .video-content-text::-webkit-scrollbar {
    color: transparent;
    height: 0;
    width: 0;
}

.video-content .video-content-margin .video-content-box .video-content-details .placeholder {
    bottom: 0;
    display: flex;
    height: 36rpx;
    justify-content: space-between;
    position: absolute;
    width: 100%;
}

.video-content .video-content-margin .video-content-box .video-content-details .close,.video-content .video-content-margin .video-content-box .video-content-details .time {
    color: rgba(255,255,255,.6);
    height: 36rpx;
    line-height: 36rpx;
}

.video-content .video-content-margin .video-content-box .video-content-details .close {
    font-size: 30rpx;
}

.video-content .video-content-margin .video-content-box .video-content-details .time {
    font-size: 22rpx;
}