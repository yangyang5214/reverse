.page-container {
    background: #000;
}

.page-container-inner {
    background: #000;
    height: 100vh;
    width: 100%;
}

.video-container {
    height: 100%;
    width: 100%;
}

.swiper-item {
    display: flex;
    flex-direction: column;
}

.swiper-item-container {
    flex: 1;
    position: relative;
    width: 100%;
}

.video-item,.video-poster-image {
    align-items: center;
    display: flex;
    height: 100%;
    justify-items: center;
    width: 100%;
}

.video-poster-image {
    background-position: 50%;
    background-repeat: no-repeat;
    position: relative;
}

.video-poster-image .hide {
    height: 0;
    width: 0;
}

.video-poster-image .size-cover {
    background-size: cover;
}

.video-poster-image .size-contain {
    background-size: contain;
}

.video-play-icon {
    height: 120rpx;
    width: 120rpx;
}

.video-no-more,.video-play-icon {
    left: 50%;
    position: absolute;
    top: 50%;
    transform: translate(-50%,-50%);
}

.video-no-more {
    align-items: center;
    background: #000;
    border-radius: 44rpx;
    color: #fff;
    display: flex;
    font-size: 28rpx;
    font-weight: 500;
    height: 80rpx;
    justify-content: center;
    line-height: 32rpx;
    margin-top: 66rpx;
    opacity: .9;
    width: 256rpx;
}

.video-loading-icon {
    height: 100rpx;
    left: 50%;
    position: absolute;
    top: 50%;
    transform: translate(-50%,-50%);
    width: 100rpx;
    z-index: 2;
}

.cover {
    background-position: 50%;
    background-repeat: no-repeat;
    background-size: contain;
    height: calc(100vh - 132rpx);
    left: 0;
    position: absolute;
    top: 0;
    width: 100%;
    z-index: 1;
}

.video-action-bar-section {
    padding-bottom: env(safe-area-inset-bottom);
}

.error-box {
    align-items: center;
    display: flex;
    flex-direction: column;
    left: 50%;
    position: absolute;
    top: 50%;
    transform: translate(-50%,-50%);
}

.error-icon {
    height: 180rpx;
    margin-bottom: 30rpx;
    width: 180rpx;
}

.error-desc {
    font-weight: 400;
    line-height: 40rpx;
}

.error-btn,.error-desc {
    color: #fff;
    font-size: 26rpx;
}

.error-btn {
    align-items: center;
    background: #ff2442;
    border-radius: 36rpx;
    display: flex;
    font-weight: 500;
    height: 72rpx;
    justify-content: center;
    line-height: 36rpx;
    margin-top: 60rpx;
    width: 158rpx;
}