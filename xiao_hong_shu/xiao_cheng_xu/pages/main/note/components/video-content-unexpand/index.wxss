.video-content {
    bottom: 0;
    position: absolute;
    width: 100%;
    z-index: 100000;
}

.video-content .video-content-box {
    bottom: 0;
    box-sizing: border-box;
    margin-bottom: 30rpx;
    padding: 30rpx 30rpx 0;
    position: absolute;
    width: 100%;
}

.video-content .video-content-box .user-information {
    align-items: center;
    display: flex;
    height: 72rpx;
}

.video-content .video-content-box .user-information .skip-user {
    align-items: center;
    display: flex;
    height: 72rpx;
    margin-right: 26rpx;
}

.video-content .video-content-box .user-information .skip-user image {
    border-radius: 50%;
    height: 72rpx;
    width: 72rpx;
}

.video-content .video-content-box .user-information .skip-user text {
    color: #fff;
    font-size: 30rpx;
    font-weight: 500;
    line-height: 36rpx;
    margin-left: 20rpx;
    max-width: 400rpx;
}

.video-content .video-content-box .user-information .focus-on {
    border: 1px solid rgba(255,255,255,.2);
    border-radius: 40rpx;
    color: #fff;
    font-size: 24rpx;
    font-weight: 500;
    height: 44rpx;
    line-height: 44rpx;
    text-align: center;
    width: 100rpx;
}

.video-content .video-content-box .video-content-details-unexpand {
    box-sizing: border-box;
    display: flex;
    margin-top: 20rpx;
    position: relative;
    width: 690rpx;
}

.video-content .video-content-box .video-content-details-unexpand .video-content-text-unexpand {
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    color: #fff;
    display: -webkit-box;
    flex: 1;
    font-size: 30rpx;
    font-weight: 400;
    line-height: 46rpx;
    overflow: hidden;
    text-overflow: ellipsis;
}

.video-content .video-content-box .video-content-details-unexpand .placeholder-unexpand {
    height: 100%;
    width: 74rpx;
}

.video-content .video-content-box .video-content-details-unexpand .placeholder-unexpand .open {
    bottom: 0;
    color: rgba(255,255,255,.6);
    font-size: 30rpx;
    height: 36rpx;
    line-height: 36rpx;
    position: absolute;
    white-space: nowrap;
    width: 60rpx;
}