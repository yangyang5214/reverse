.video-content {
    bottom: 0;
    position: absolute;
    width: 100%;
    z-index: 10;
}

.video-content.expand {
    height: 100%;
}

.video-content .video-content-box-background {
    background: linear-gradient(180deg,transparent,rgba(0,0,0,.6) 94.77%);
    bottom: 0;
    height: 362rpx;
    position: absolute;
    transform: matrix(1,0,0,1,0,0);
    width: 100%;
}

.video-content .video-content-box-background .video-content-box {
    bottom: 0;
    box-sizing: border-box;
    padding: 30rpx;
    position: absolute;
    width: 100%;
}

.video-content .video-content-box-background .video-content-box .user-information {
    align-items: center;
    display: flex;
    height: 72rpx;
}

.video-content .video-content-box-background .video-content-box .user-information image {
    border: 1px solid #e6e6e6;
    border-radius: 50%;
    box-shadow: 0 1px 3px #fff;
    height: 72rpx;
    width: 72rpx;
}

.video-content .video-content-box-background .video-content-box .user-information text {
    color: #fff;
    font-size: 30rpx;
    font-weight: 500;
    line-height: 36rpx;
    margin-left: 20rpx;
    margin-right: 26rpx;
}

.video-content .video-content-box-background .video-content-box .user-information .focus-on {
    border: 1px solid #fff;
    border-radius: 40rpx;
    color: #fff;
    font-size: 24rpx;
    font-weight: 500;
    height: 44rpx;
    line-height: 44rpx;
    text-align: center;
    width: 100rpx;
}

.video-content .video-content-box-background .video-content-box .video-content-details {
    box-sizing: border-box;
    display: flex;
    margin-top: 20rpx;
    position: relative;
    width: 690rpx;
}

.video-content .video-content-box-background .video-content-box .video-content-details .video-content-text {
    -webkit-box-orient: vertical;
    color: #fff;
    display: -webkit-box;
    font-size: 30rpx;
    font-weight: 400;
    line-height: 46rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    width: 614rpx;
}

.video-content .video-content-box-background .video-content-box .video-content-details .video-content-text.pack-up {
    -webkit-line-clamp: 2;
}

.video-content .video-content-box-background .video-content-box .video-content-details .placeholder {
    bottom: 0;
    height: 92rpx;
    position: absolute;
    right: 0;
    width: 74rpx;
}

.video-content .video-content-box-background .video-content-box .video-content-details .placeholder .open {
    bottom: 0;
    color: rgba(255,255,255,.6);
    font-size: 30rpx;
    height: 36rpx;
    line-height: 36rpx;
    position: absolute;
    width: 60rpx;
}