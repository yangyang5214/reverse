.quark-button-container {
    -webkit-tap-highlight-color: transparent;
    border: 1px solid #666;
    border-radius: 5px;
    box-sizing: border-box;
    display: block;
    font-size: 18px;
    line-height: 2.55555556;
    margin-left: auto;
    margin-right: auto;
    overflow: hidden;
    padding-left: 14px;
    padding-right: 14px;
    text-align: center;
    text-decoration: none;
}

.quark-button-container.red {
    border: 1px solid #ff2741;
    color: #ff2741;
}

.quark-button-container.grey {
    border: 1px solid #666;
    color: #333;
}

.quark-button-container.disable {
    border: 1px solid #ccc;
    color: #999;
}

.quark-button {
    background-color: #ff2741;
    border-radius: 0;
    color: #fff;
    font-size: 32rpx;
    font-weight: 500;
    height: 100rpx;
    line-height: 100rpx;
    width: 100%;
}

.quark-button.green {
    background: #67da9f;
    border-radius: 8rpx;
}

.quark-button.disable {
    background: #ccc;
}

.quark-button-outline {
    background: #fff;
    border-radius: 8rpx;
    height: 60rpx;
    width: auto;
}

.quark-button-outline.red {
    color: #ff2741;
}

.quark-button-outline.red::after {
    border: 1px solid #ff2741;
}

.quark-button-outline.grey {
    color: #333;
}

.quark-button-outline.grey::after {
    border: 1px solid #666;
}

.quark-button-outline.disable {
    color: #999;
}

.quark-button-outline.disable::after {
    border: 1px solid #ccc;
}

.quark-button-view {
    border: 2rpx solid #666;
    border-radius: 8rpx;
    color: #333;
    font-size: 15px;
    line-height: 17px;
    max-height: 60rpx;
    min-width: 128rpx;
    overflow: hidden;
    padding: 10rpx;
    text-align: center;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.quark-button-view.selected {
    border: 2rpx solid #ff2741;
    color: #ff2741;
    font-weight: 500;
}

.quark-button-view.disabled {
    border: 2rpx solid #e6e6e6;
    color: #999;
}

.quark-button-view.searchbar {
    background: #f5f5f5;
    border: 2rpx solid #f5f5f5;
    border-radius: 30rpx;
    color: #333;
    display: flex;
    font-size: 13px;
    justify-content: center;
    max-height: 72rpx;
    max-width: 600rpx;
    min-width: 120rpx;
    padding: 10rpx 20rpx;
}

.quark-button-view.login {
    background-color: #ff2741;
}

.quark-button-view.login,.quark-button-view.logindisabled {
    border: 0;
    border-radius: 0 0 16rpx 16rpx;
    color: #fff;
    font-weight: 500;
    height: 88rpx;
    padding-top: 26rpx;
}

.quark-button-view.logindisabled {
    background-color: #ccc;
}

scroll-view {
    background: #f5f8fa;
}

.detail-bottom {
    align-items: center;
    display: flex;
    flex-direction: row;
    height: 56rpx;
    justify-content: flex-end;
    margin-top: 16rpx;
    width: 100%;
}

.detail-bottom .settings {
    height: 56rpx;
    width: 80rpx;
}

.detail-bottom .settings .settings-img {
    height: 100%;
    width: 100%;
}