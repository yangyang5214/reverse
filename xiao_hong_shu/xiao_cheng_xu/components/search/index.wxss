.search-header {
    background: #fff;
    box-shadow: 0 2rpx 12rpx 0 rgba(0,0,0,.03);
    box-sizing: border-box;
    display: flex;
    height: 82rpx;
    padding: 0 30rpx;
    position: fixed;
    top: inherit;
    width: 100%;
    z-index: 10010;
}

.search-header.home-header {
    box-shadow: none;
    height: 82rpx;
    margin-top: 0;
    padding: 0 30rpx 10rpx;
}

.search-bar {
    height: 60rpx;
    margin-top: 4rpx;
    position: absolute;
    width: 596rpx;
}

.search-bar.no-cancel {
    width: 690rpx;
}

.search-bar.home-bar {
    height: 70rpx;
}

.search-svg {
    left: 20rpx;
    position: absolute;
    top: 14rpx;
    z-index: 10010;
}

.search-svg.home-search-svg {
    left: 26rpx;
    top: 14rpx;
}

.cancel-svg {
    position: absolute;
    right: 20rpx;
    top: 10rpx;
    width: 24rpx;
    z-index: 10010;
}

.search-input {
    background: #f5f5f5;
    border: 2rpx solid #f5f5f5;
    border-radius: 30rpx;
    color: #333;
    font-size: 15px;
    height: 56rpx;
    line-height: 17px;
    padding-left: 64rpx;
    padding-right: 64rpx;
}

.search-input.home-input {
    height: 60rpx;
}

.search-text {
    color: #999;
    font-size: 16px;
    line-height: 18px;
    position: absolute;
    right: 30rpx;
    top: 14rpx;
}

.placeholder-class {
    color: #999;
    font-size: 15px;
    line-height: 17px;
    max-width: 95%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.placeholder-class.search-input-home {
    height: 60rpx;
    line-height: 60rpx;
    margin-left: 5rpx;
}

.placeholder-class.search-input-trending {
    padding-top: 12rpx;
}