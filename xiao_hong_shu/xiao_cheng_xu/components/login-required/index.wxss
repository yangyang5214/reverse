.login-required-conatiner {
    align-items: center;
    background: rgba(0,0,0,.4);
    display: flex;
    height: 100%;
    justify-content: center;
    left: 0;
    position: fixed;
    width: 100%;
    z-index: 20010;
}

.login-required-modal {
    background: #fff;
    border-radius: 8px;
    margin-top: -128rpx;
    position: relative;
    width: 530rpx;
}

.login-required-modal .close {
    height: 20rpx;
    padding: 10rpx;
    position: absolute;
    right: 30rpx;
    top: 30rpx;
    width: 20rpx;
}

.login-required-modal .close image {
    height: 100%;
    width: 100%;
}

.login-required-modal .logo {
    display: flex;
    justify-content: center;
    margin-top: 100rpx;
}

.login-required-modal .logo image {
    height: 192rpx;
    width: 330rpx;
}

.login-required-modal .label {
    align-items: center;
    display: flex;
    height: 32rpx;
    justify-content: center;
    margin-top: 80rpx;
}

.login-required-modal .label .line {
    background: #ccc;
    height: 2rpx;
    width: 44rpx;
}

.login-required-modal .label .text {
    color: #666;
    font-size: 24rpx;
    line-height: 32rpx;
    margin: 0 20rpx;
}

.login-required-modal .types {
    display: flex;
    margin-top: 36rpx;
    padding-bottom: 60rpx;
}

.login-required-modal .types .type-item {
    align-items: center;
    display: flex;
    flex: 1;
    flex-direction: column;
}

.login-required-modal .types .type-item-icon {
    height: 100rpx;
    width: 100rpx;
}

.login-required-modal .types .type-item-text {
    color: #333;
    font-size: 24rpx;
    margin-top: 20rpx;
}

.login-required-modal button {
    background: none;
    border: none;
    font-size: 24rpx;
    line-height: inherit;
}

.login-required-modal button:after {
    border: none;
}