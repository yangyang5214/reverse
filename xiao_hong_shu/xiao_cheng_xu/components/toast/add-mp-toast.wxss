.quark-button-container {
    -webkit-tap-highlight-color: transparent;
    border: 1px solid #666;
    border-radius: 5px;
    box-sizing: border-box;
    display: block;
    font-size: 18px;
    line-height: 2.55555556;
    margin-left: auto;
    margin-right: auto;
    overflow: hidden;
    padding-left: 14px;
    padding-right: 14px;
    text-align: center;
    text-decoration: none;
}

.quark-button-container.red {
    border: 1px solid #ff2741;
    color: $red;
}

.quark-button-container.grey {
    border: 1px solid #666;
    color: #333;
}

.quark-button-container.disable {
    border: 1px solid #ccc;
    color: #999;
}

.quark-button {
    background-color: #ff2741;
    border-radius: 0;
    color: #fff;
    font-size: 32rpx;
    font-weight: 500;
    height: 100rpx;
    line-height: 100rpx;
    width: 100%;
}

.quark-button.green {
    background: #67da9f;
    border-radius: 8rpx;
}

.quark-button.disable {
    background: #ccc;
}

.quark-button-outline {
    background: #fff;
    border-radius: 8rpx;
    height: 60rpx;
    width: auto;
}

.quark-button-outline.red {
    color: $red;
}

.quark-button-outline.red::after {
    border: 1px solid #ff2741;
}

.quark-button-outline.grey {
    color: #333;
}

.quark-button-outline.grey::after {
    border: 1px solid #666;
}

.quark-button-outline.disable {
    color: #999;
}

.quark-button-outline.disable::after {
    border: 1px solid #ccc;
}

.quark-button-view {
    border: 2rpx solid #666;
    border-radius: 8rpx;
    color: #333;
    font-size: 15px;
    line-height: 17px;
    max-height: 60rpx;
    min-width: 128rpx;
    overflow: hidden;
    padding: 10rpx;
    text-align: center;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.quark-button-view.selected {
    border: 2rpx solid #ff2741;
    color: #ff2741;
    font-weight: 500;
}

.quark-button-view.disabled {
    border: 2rpx solid #e6e6e6;
    color: #999;
}

.quark-button-view.searchbar {
    background: #f5f5f5;
    border: 2rpx solid #f5f5f5;
    border-radius: 30rpx;
    color: #333;
    display: flex;
    font-size: 13PX;
    justify-content: center;
    max-height: 72rpx;
    max-width: 600rpx;
    min-width: 120rpx;
    padding: 10rpx 20rpx;
}

.quark-button-view.login {
    background-color: #ff2741;
}

.quark-button-view.login,.quark-button-view.logindisabled {
    border: 0;
    border-radius: 0 0 16rpx 16rpx;
    color: #fff;
    font-weight: 500;
    height: 88rpx;
    padding-top: 26rpx;
}

.quark-button-view.logindisabled {
    background-color: #ccc;
}

.add-mp-container {
    height: 292rpx;
    position: fixed;
    right: 30rpx;
    z-index: 1001000;
}

.add-mp-container .icon-top {
    height: 20rpx;
    position: absolute;
    right: 100rpx;
    top: 0;
    width: 40rpx;
}

.add-mp-container .submit-container {
    -webkit-tap-highlight-color: none;
    background-color: none;
    background: none;
    border-radius: 0;
    color: inherit;
    font-size: inherit;
    line-height: inherit;
    padding: 0;
    text-align: inherit;
}

.add-mp-container .submit-container:after {
    border: none;
}

.add-mp-container .submit-container.button-hover {
    background-color: none;
}

.add-mp-container .add-mp-content {
    align-items: center;
    background: rgba(255,84,104,.92);
    border-radius: 74rpx;
    color: #fff;
    display: flex;
    flex-direction: row;
    font-size: 30rpx;
    height: 74rpx;
    justify-content: center;
    padding: 0;
    position: absolute;
    right: 4rpx;
    top: 16rpx;
    width: 420rpx;
}

.add-mp-container .add-mp-content .content-text {
    font-weight: 500;
    text-align: center;
    width: 360rpx;
}

.add-mp-container .add-mp-content .close-icon {
    display: block;
    height: 56rpx;
    width: 56rpx;
}

.add-mp-container .add-mp-content.hasClose {
    width: 460rpx;
}